{
    "name": "returnyoutubesortbyoldest",
    "version": "0.1.0",
    "manifest_version": 3,
    "permissions": ["storage","tabs"],
    "host_permissions": ["https://*.youtube.com/*"],
    "background": {
        "service_worker": "background.js"
      },
    "description" : "returns youtube sort by oldest",
    "externally_connectable": {
      "matches": ["*://youtube.com/*",
                  "*://m.youtube.com/*",
                  "*://www.youtube.com/*"]
    },
    "content_scripts" : [
       {
        "matches": [
            "*://youtube.com/*",
            "*://www.youtube.com/*",
            "*://m.youtube.com/*"
          ],
          "run_at": "document_end",
           "js" : ["contentScript.js"]
       }

    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/button.png"
        ],
        "matches": ["https://*.youtube.com/*"]
      }
    ]
}
